(include "setup-helper")

(verify-extension-name "aima")

(setup-shared-extension-module
 'aima
 (extension-version "0.7.5")
 compile-options: '(-X cock))

(setup-shared-extension-module
 'aima-vacuum
 (extension-version "0.7.5")
 compile-options: '(-X cock))

(setup-shared-extension-module
 'aima-tessellation
 (extension-version "0.7.5")
 compile-options: '(-X cock)
 files: '("aima-tessellation.R"))

;;; Generate docs.
(run (cock -o aima.wiki
           aima.scm
           aima-core.scm
           aima-vacuum.scm
           aima-vacuum-core.scm
           aima-tessellation.scm
           aima-tessellation-core.scm
           "||" echo cock-utils not "installed:" not creating documentation))
